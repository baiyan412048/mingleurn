        // 主要內容
        main
          .container
            .header
              a.back-overview(href="./about.html") BACK
              h1.unit-alias(data-animate="fadeInUp" data-duration="0.4s" data-delay="0.4s") Featured Embroidery
              .unit-description.innertext(data-animate="fadeInUp" data-duration="0.4s" data-delay="0.4s") MingLeurn is a team of revolution, innovated by dozens of designers who lead the trend well. With elegant taste, unique patterns, delicate work, and excellent service, we are proud to present our best collection here.
            //主圖輪播
            .mainBanner-slider
              .slider-wrapper
                .swiper-container(
                  data-swiper-id="detail-banner-slider-ID"
                  data-swiper-name="detail-banner-slider"
                  data-swiper-direction="horizontal" 
                  data-swiper-num="1" 
                  data-swiper-arrow="off" 
                  data-swiper-nav="on" 
                  data-swiper-nav-name=".banner-slider-pagination"
                  data-swiper-autoplay="on" 
                  data-swiper-effect="fade"
                  data-swiper-breakpoints="{1024: { direction: 'vertical' }}")
                  .swiper-wrapper
                    //這邊跑迴圈
                    //請將欄位串在swiper-slide的data上
                    //描述 - data-description
                    each slider in banner_slider
                      .swiper-slide(data-swiper-autoplay="5000" data-description= slider.description)
                        .content
                          if slider.type == 'img'
                            //圖片
                            .img-box
                              img.swiper-lazy(data-src= slider.img, alt="")
                              .swiper-lazy-preloader
                          else if slider.type == 'video'
                            //影片
                            .video-box(video-id="zBU4R1Jm46k" video-type="youtube")
                              //影片封面圖
                              img.swiper-lazy(data-src= slider.img, alt="")
                              .swiper-lazy-preloader
                .swiper-pagination.banner-slider-pagination.detail-banner-slider-ID
              //輪播文字區塊
              .slider-textarea
                .info
                  .description
