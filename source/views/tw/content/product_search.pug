  body.product_search(data-page="product_search")
    a.sidebar-switch.sidebar-open(href="javascript:;")
      .icon-right
      .text Search
    .search_sidebar
      .sidebar-head
        a.close(href="javascript:;")
          i.icon-left
        a.text.ajax_open(href="javascript:;" data-ajax-route="./ajax_mode_explain.html" data-ajax-container=".mode-explain-wrap" data-ajax-callback="_ajaxCallback.normalLightbox")
