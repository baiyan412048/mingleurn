        //搜尋時跑 _product_search.search() 這支，不管是按放大鏡或是在input按Enter
        input(type="text" placeholder="Enter keywords...")
        a.search-btn(href="javascript:;" onclick="_product_search.search()")
          .icon-search
      .search-range.scrollbar-macosx
        .catagory-wrap
          //預設第一個 .search-catagory 有active
          .search-catagory.active
            .catagory Hot Words
            .option-collapse(style="display: block;")
              ul.option-list
                each data in categoryList
                  li.option
                    label.checkbox
                      input(type="checkbox")
                      .fake-checkbox
                        span
                      p= data
            .arrow
              i.icon-arrow-up
          .search-catagory
            .catagory Bridal
            .option-collapse
