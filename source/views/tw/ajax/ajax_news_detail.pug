              .mainBanner-slider
                .slider-wrapper
                  .swiper-container(
                    data-swiper-id="detail-banner-slider-ID"
                    data-swiper-name="detail-banner-slider"
                    data-swiper-direction="horizontal" 
                    data-swiper-num="1" 
                    data-swiper-arrow="off" 
                    data-swiper-nav="on" 
                    data-swiper-nav-name=".banner-slider-pagination"
                    data-swiper-autoplay="off" 
                    data-swiper-effect="fade"
                    data-swiper-breakpoints="{1024: { direction: 'vertical' }}")
                    .swiper-wrapper
                      //這邊跑迴圈
                      //請將欄位串在swiper-slide的data上
                      //日期(天) - data-day, 日期(年月) - data-month-year, 標題 - data-title, 描述 - data-description
                      each slider in news_slider
                        .swiper-slide(data-swiper-autoplay="5000" data-day= slider.day data-month-year= slider.monthYear data-title= slider.title data-description= slider.description)
                          .content
                            if slider.type == 'img'
                              //圖片
                              .img-box
                                img(src= slider.img, alt="")
                            else if slider.type == 'video'
                              //影片
                              .video-box(video-id="zBU4R1Jm46k" video-type="youtube" video-player-type='onPage')
                                //影片封面圖
                                img(src= slider.img, alt="")
                            
                  .swiper-pagination.banner-slider-pagination(class="detail-banner-slider-ID")
                //輪播文字區塊
                .slider-textarea
                  .info
                    .description
