          //主圖輪播
          .mainBanner-slider
            .slider-wrapper
              .swiper-container(
                data-swiper-id="guide-banner-slider-ID"
                data-swiper-name="guide-banner-slider"
                data-swiper-direction="horizontal" 
                data-swiper-num="1" 
                data-swiper-arrow="off" 
                data-swiper-nav="on" 
                data-swiper-nav-name=".banner-slider-pagination"
                data-swiper-autoplay="off" 
                data-swiper-effect="fade"
                data-swiper-breakpoints="{1024: { direction: 'vertical' }}")
                .swiper-wrapper
                  //這邊跑迴圈
                  //請將欄位串在swiper-slide的data上
                  //描述 - data-description
                  each slider in banner_slider
                    .swiper-slide(data-description= slider.description)
                      .content
                        if slider.type == 'img'
                          //圖片
                          .img-box
                            img(src= slider.img, alt="")
                        else if slider.type == 'video'
                          //影片
                          .video-box(video-id="zBU4R1Jm46k" video-type="youtube")
                            //影片封面圖
                            img(src= slider.img, alt="")
